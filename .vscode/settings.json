{
  "files.associations": {
    "*.yaml": "yaml",
    "*.yml": "yaml",
    "mcp.json": "jsonc",
    "objetivo.yaml": "yaml",
    "mcp-questions.yaml": "yaml"
  },
  "yaml.schemas": {
    "objetivo": "objetivo.yaml",
    "mcp-questions": "mcp-questions.yaml"
  },
  "files.exclude": {
    "**/node_modules": true,
    "**/.git": true,
    "**/.mcp-status": true,
    "**/secrets/*.json": false,
    "**/__pycache__": true,
    "**/*.pyc": true,
    "**/logs/*.log": true
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/.git": true,
    "**/secrets": true,
    "**/__pycache__": true,
    "**/logs": true
  },
  "editor.rulers": [
    80,
    120
  ],
  "editor.tabSize": 4,
  "editor.insertSpaces": true,
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "editor.formatOnSave": true,
  "aiAssistant.projectContext": ".vscode/mcp.json",
  "aiAssistant.followProjectConventions": true,
  "[python]": {
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    }
  },
  "[yaml]": {
    "editor.tabSize": 2,
    "editor.insertSpaces": true
  },
  "[json]": {
    "editor.tabSize": 2,
    "editor.insertSpaces": true
  },
  "[jsonc]": {
    "editor.tabSize": 2,
    "editor.insertSpaces": true
  },
  "[markdown]": {
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.wordWrap": "on"
  },
  "python.defaultInterpreterPath": "./venv/bin/python",
  "python.terminal.activateEnvironment": true,
  "python.testing.pytestEnabled": true,
  "python.testing.pytestArgs": [
    "test/"
  ],
  "python.linting.enabled": true,
  "python.linting.pylintEnabled": true,
  "python.linting.flake8Enabled": true,
  "python.analysis.typeCheckingMode": "basic",
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/**": true,
    "**/venv/**": true,
    "**/.venv/**": true,
    "**/logs/**": true,
    "**/reports/**": true
  },
  "emmet.includeLanguages": {
    "jinja2": "html"
  },
  "database-client.telemetry": false,
  "postgresql.format.spaces": 4,
  "postgresql.format.commaFirst": false,
  "migrations.workingDirectory": "./",
  "migrations.logLevel": "INFO"
}
